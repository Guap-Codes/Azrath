# Server Configuration
AZRATH_HOST=127.0.0.1
AZRATH_PORT=3000
AZRATH_MAX_WORKERS=30
AZRATH_WORKER_KEEP_ALIVE_SECS=10

# HTTP/1.x Configuration
AZRATH_HTTP1_MAX_BUF_SIZE=524288
AZRATH_HTTP1_KEEP_ALIVE=true
AZRATH_HTTP1_HALF_CLOSE=false
AZRATH_HTTP1_PIPELINE_FLUSH=false
AZRATH_HTTP1_WRITEV=true
AZRATH_HTTP1_TITLE_CASE_HEADERS=false
AZRATH_HTTP1_PRESERVE_HEADER_CASE=false
AZRATH_HTTP1_ONLY=false

# HTTP/2 Configuration (when feature is enabled)
AZRATH_HTTP2_ONLY=false
AZRATH_HTTP2_MAX_SEND_BUF_SIZE=524288
AZRATH_HTTP2_ADAPTIVE_WINDOW=true
AZRATH_HTTP2_INITIAL_STREAM_WINDOW_SIZE=65535
AZRATH_HTTP2_INITIAL_CONNECTION_WINDOW_SIZE=1048576
AZRATH_HTTP2_MAX_FRAME_SIZE=16384
AZRATH_HTTP2_MAX_CONCURRENT_STREAMS=100